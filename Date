public class Date {
	
	//inst. var.
	private String year;
	private String month;
	private String day;
	private int total;

	//class method
	public Date(String yearIn, String monthIn, String dayIn) {
		year = yearIn;
		month = monthIn;
		day = dayIn;
		total = dayIn + monthIn * 30 + year * 365;
	}
	
	//other methods

	public int calcTotal(){

	}

	public int getTotal(){
		return total;
	}
	public String getYear() {
		return year;
	}
	
	public String geMonth() {
		return month;
	}
	
	public String getDay() {
		return day;
	}

	public void setYear(String yearIn) {
		year = yearIn;
	}
	
	public void setMonth(String monthIn) {
		month = monthIn;
	}
	
	public void setDay(String dayIn) {
		day = dayIn;
	}
	
	/**
	 * this method returns a string that shows month and day
	 * @return year/month/day
	 */
	public String display() {
		return year + "/" +  month + "/" + day;
		
	}

}
